{
	"name": "mediawiki/v-e-for-all",
	"type": "mediawiki-extension",
	"require-dev": {
		"../../vendor/mediawiki/mediawiki-codesniffer": "45.0.0",
		"../../vendor/mediawiki/minus-x": "1.1.3",
		"../../vendor/php-parallel-lint/php-console-highlighter": "1.0.0",
		"../../vendor/php-parallel-lint/php-parallel-lint": "1.4.0"
	},
	"scripts": {
		"fix": [
          "minus-x fix ",
			"phpcbf"
		],
		"test": [
			"parallel-lint . --exclude vendor --exclude node_modules",
			"@phpcs",
          "minus-x check "
		],
		"phpcs": "phpcs -sp --cache"
	},
	"require": {
		"../../vendor/composer/installers": "^2|^1.0.1"
	},
	"config": {
		"allow-plugins": {
			"composer/installers": true,
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	}
}
